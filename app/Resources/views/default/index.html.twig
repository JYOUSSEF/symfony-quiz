{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    
    <ol class="breadcrumb">
        <li class="active">Home</li>
    </ol>
    
    <div class="row">
        <div class="col-md-6">

            {% if quizTopicsRecords is not empty %}
                <h1>Quiz topics</h1>

                <div>
                {% for records in quizTopicsRecords %}
                    <a href="{{ path('acme_quiz_topic', {'topic': records.name | slugify }) }}" class="btn btn-info" title="{{ records.name }}">{{ records.name }}</a>
                {% endfor %}
                </div>

                {% if quizTags is not empty %}
                    <!-- Quiz tags -->
                    <div class="row">
                        <h3>Tags</h3>
                        {% for tag in quizTags %}
                            <div class="col-sm-4 gridcellpadding">
                                <a href="{{ path('acme_quiz_tags', {'tag': tag.name | slugify }) }}" class="btn btn-default" title="{{ tag.name }}"><i class="fa fa-tags"></i> {{ tag.name }}</a>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            {% else %}
                <div class="alert alert-warning">
                    <h1>No quiz topics</h1>
                    <p>There were no topics to list on our archive.</p>
                </div>
            {% endif %}

        </div>
        <div class="col-md-6">
            
            <h1>Interview questions topics</h1>

            {% if interviewTopics is not empty %}
            <div class="row">
            {% for topic in interviewTopics %}
                <div class="col-sm-4 gridcellpadding">
                    <a href="{{ path('acme_interview', {'topic': topic.name|slugify }) }}" class="btn btn-info" title="{{ topic.name }} Question">{{ topic.name }}</a>
                </div>
            {% endfor %}
            </div>
            {% endif %}

            {% if interviewTags is not empty %}
                <h3>Tags</h3>
                
                <div class="row">
                {% for tag in interviewTags %}
                    <div class="col-sm-4 gridcellpadding">
                        <a href="{{ url('acme_interview_tags', { 'tag': tag.name | slugify }) }}" class="btn btn-default" title="Interview questions for tag {{ tag.name }}"><i class="fa fa-tags"></i> {{ tag.name }}</a>
                    </div>
                {% endfor %}
                </div>
            {% endif %}
        </div>

    </div>

    <hr>

    {% macro recursiveTree(parentId, treeData) %}
        {% if treeData.parents[parentId] is defined %}
            <ul>
                {% for topicId in treeData.parents[parentId] %}
                    <li>{{ treeData.items[topicId].name }}
                    {{ _self.recursiveTree(topicId, treeData) }}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endmacro %}

    <div>
        <h2>All topics</h2>

        {{ _self.recursiveTree(0, topicsTree) }}
    </div>
    
    {% include '::default/footer.html.twig' %}
</div>
{% endblock %}
