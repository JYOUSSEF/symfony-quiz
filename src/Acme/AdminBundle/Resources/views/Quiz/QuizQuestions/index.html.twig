{% extends 'AdminBundle::layout.html.twig' %}

{% block section %}

<ul class="breadcrumb">
    <li><a href="#" title="Home page">Home</a> <span class="divider"></span></li>
    <li class="active">Quiz questions</li>
</ul>

<h1>Quiz questions list</h1>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Question</th>
                <th>Comment</th>
                <th>Number of correct answers</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.question }}</td>
                <td>{{ entity.questionCode }}</td>
                <td>{{ entity.numberCorrectAnswers }}</td>
                <td><a href="{{ path('acme_admin_quiz_quizquestions_show', { 'id': entity.id }) }}">show</a></td>
                <td><a href="{{ path('acme_admin_quiz_quizquestions_edit', { 'id': entity.id }) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acme_admin_quiz_quizquestions_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
{% endblock %}
