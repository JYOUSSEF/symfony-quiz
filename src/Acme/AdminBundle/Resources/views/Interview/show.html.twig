{% extends 'AdminBundle::layout.html.twig' %}

{% block section %}
    <h1>Interview</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Question</th>
                <td>{{ entity.question }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ entity.answer }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entity.position }}</td>
            </tr>
            <tr>
                <th>Topicsold</th>
                <td>{{ entity.topicsOld }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('acme_admin_interview_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('acme_admin_interview_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
